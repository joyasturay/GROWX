<%layout("/layouts/boilerplate.ejs")%>
<h3 class="mt-3">All listings</h3>
<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
    <%for(let listing of listings){%>
        <a href="/listings/<%=listing._id%>" style="text-decoration:none">
       
        <div class="card  mb-3 listing-card">
            <img src="<%=listing.image%>" class="card-img-top" alt="listing_image" style="height:250px">
            <div class="card-img-overlay">Cipherthon</div>
            <div class="card-body">
                <h5 class="card-title"><%=listing.batchname%></h5>
                <p class="card-text"><%=listing.subject%></p>
                <p class="card-text"><%=listing.teachername%></p>
            </div>
        </div>
        </a>
        
    <%}%>
    
</div>

