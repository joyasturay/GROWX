<%layout ("/layouts/boilerplate")%>
    <div class="row mt-3">
        <div class="col-8 offset-2">
        
    <h3>Edit Listing</h3>
    <form method="POST" action="/listings/<%=listing._id%>?_method=PUT" class="needs-validation" novalidate>
        <div class="mb-3">
            <label for="batchname" class="form-label">Batch Name</label>
            <input name="listing[batchname]" type="text"  value="<%=listing.batchname%>" class="form-control" required>
            <div class="valid-feedback">Title looks good</div>
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea name="listing[description]" type="text" class="form-control" required><%=listing.description%></textarea>
            <div class="invalid-feedback">Please enter a Short description</div>
        </div>
            <div class="mb-3">
                <label for="subject" class="form-label">Subject</label>
                <input name="listing[subject]" type="text" value="<%=listing.subject%>" class="form-control" required>
                <div class="invalid-feedback">Please enter a valid subject</div>
            </div>
         <div class="mb-3">
            <label for="image" class="form-label">Image</label>
            <input name="listing[image]" type="text" value="<%=listing.image%>" class="form-control" required>
            <div class="invalid-feedback">Please enter a valid image</div>
        </div>
        <button class="btn btn-dark edit-btn mt-3">Submit</button>
    </form>
</div>
    </div>